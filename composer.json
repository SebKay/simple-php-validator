{
    "name": "sebkay/simple-php-validator",
    "authors": [
        {
            "name": "Seb Kay",
            "email": "seb@sebkay.com",
            "homepage": "https://sebkay.com/"
        }
    ],
    "type": "project",
    "autoload": {
        "psr-4": {
            "SebKay\\SPV\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "laravel/pint": "^1.6",
        "spatie/ray": "^1.37"
    },
    "scripts": {
        "build": [
            "@clean",
            "composer install"
        ],
        "lint": "./vendor/bin/pint --test",
        "fix": "./vendor/bin/pint",
        "test": [
            "./vendor/bin/pest --parallel --processes=8 --stop-on-failure"
        ],
        "test:coverage": [
            "XDEBUG_MODE=coverage ./vendor/bin/pest --parallel --coverage --min=85 --processes=8 --stop-on-failure"
        ],
        "clean": [
            "git clean -xffd"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "pestphp/pest": "^1.22",
        "pestphp/pest-plugin-parallel": "^1.2"
    }
}
